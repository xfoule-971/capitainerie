<%- include('partials/head') %>
<%- include('partials/header') %>

<div class="container mt-5">
    <h2 class="mb-4 text-center text-primary">Gestion des Utilisateurs</h2>

    <div class="mb-3 text-end">
        <a href="/users/new" class="btn btn-success">➕ Ajouter un utilisateur</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (!users || users.length === 0) { %>
                <tr>
                    <td colspan="4" class="text-center">Aucun utilisateur</td>
                </tr>
            <% } else { %>
                <% users.forEach((user, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td>
                            <a href="/users/<%= user._id %>" class="btn btn-sm btn-primary">Voir</a>
                            <a href="/users/<%= user._id %>/edit" class="btn btn-sm btn-warning">Modifier</a>
                            <form action="/users/<%= user._id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button class="btn btn-sm btn-danger" onclick="return confirm('Supprimer cet utilisateur ?')">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>

    <div class="mt-4 text-center">
        <a href="/dashboard" class="btn btn-secondary">⬅ Retour au tableau de bord</a>
    </div>
</div>

<%- include('partials/footer') %>


