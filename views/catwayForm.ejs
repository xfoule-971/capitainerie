<%- include('partials/head') %>
<%- include('partials/header') %>

<div class="container mt-5">
    <h2 class="mb-4 text-center text-primary"><%= catway ? 'Modifier Catway' : 'Ajouter Catway' %></h2>

    <form action="<%= catway ? '/catways/' + catway._id : '/catways' %>" method="POST">
        <% if (catway) { %>
            <input type="hidden" name="_method" value="POST">
        <% } %>

        <div class="mb-3">
            <label class="form-label">Numéro</label>
            <input type="text" name="catwayNumber" class="form-control" value="<%= catway ? catway.catwayNumber : '' %>" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Type</label>
            <input type="text" name="catwayType" class="form-control" value="<%= catway ? catway.catwayType : '' %>" required>
        </div>

        <div class="mb-3">
            <label class="form-label">État</label>
            <input type="text" name="catwayState" class="form-control" value="<%= catway ? catway.catwayState : '' %>" required>
        </div>

        <button type="submit" class="btn btn-primary"><%= catway ? 'Modifier' : 'Ajouter' %></button>
        <a href="/catways" class="btn btn-secondary">Annuler</a>
    </form>
</div>

<%- include('partials/footer') %>


