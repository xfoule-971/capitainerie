<%- include('partials/head') %>

<header>
    <h1 class="text-center">Bienvenue sur votre API Russel</h1>
</header>

<section class="container text-center">
    <p>
        Cette application permet de gérer les catways,
        les réservations et les utilisateurs du port de plaisance Russel.
    </p>

    <h2>Connexion</h2>

    <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger mx-auto" style="max-width: 25em;">
            <%= error %>
        </div>
    <% } %>

    <form method="POST" action="/login"
          class="mx-auto mt-3 p-4 border border-primary rounded shadow"
          style="max-width: 25em;">

        <div class="form-group mb-3 text-start">
            <input
                type="email"
                name="email"
                class="form-control"
                placeholder="Adresse email"
                required
            >
        </div>

        <div class="form-group mb-3 text-start">
            <input
                type="password"
                name="password"
                class="form-control"
                placeholder="Mot de passe"
                required
            >
        </div>

        <button type="submit" class="btn btn-primary w-100">
            Se connecter
        </button>
    </form>

    <div class="mt-3">
        <a href="/api-docs">Voir la documentation de l’API</a>
    </div>
</section>

<%- include('partials/footer') %>


